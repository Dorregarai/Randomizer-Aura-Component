({
	showToast : function(params) {
		let toastEvent = $A.get('e.force:showToast');
        
        toastEvent.setParams({
            title : params.title,
            message: params.message,
            type: params.type,
            mode: params.mode,
            key: 'info_alt'
        });
        
        toastEvent.fire();
    }
})
